include ../mixins/mixins
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        <!-- CSS only -->
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
        script(src='https://cdn.tailwindcss.com')
    body
        nav#to-left.relative.w-full.flex.flex-wrap.items-center.justify-around.py-3.bg-gray-900.text-gray-200.shadow-lg.navbar.navbar-expand-lg.navbar-light(<li='')
            p
                a.text-l.text-white.pl-2.font-semibold(class='hover:text-red-100' href='/home')  Home 

            li#to-right.nav-item.p-2.list-none
                a.text-l.text-white.pr-2.font-semibold(class='hover:text-red-100' href='/auth/logout') Logout
        .wrapper.h-full
            .row
                nav.col-2.flex-col.items-end.h-full 
                    a(href='/home').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/bug.svg', alt='').w-8
                    a(href='/home').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/flat-color-icons_home.svg', alt='').w-8
                    a(href='/search').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/emojione-v1_telescope.svg', alt='').w-8
                    a(href='/notifications').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/Notifications.svg', alt='').w-8
                    a(href='/messages').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/messages.svg', alt='').w-8
                    a(href='/profile').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/Profile-Logo.svg', alt='').w-8
                    a(href='/auth/logout').w-55.flex.items-center.justify-center.p-10.text-6xl.rounded-full(class=" hover:bg-sky-100")
                        img(src='/images/SignOut.svg', alt='').w-8
                .mainSectionContainer.col-10.col-md-8.col-lg-6.p-2.border-x-4.border-indigo-300.flex-col
                    .titleContainer.p-2.h-12.flex.item-center.border-b-2.border-indigo-200
                        h1.flex-1.m-0.font-bold.text-xl #{pageTitle}
                    block content 

                .col-2.d-none.d-md-block-md-2.col-lg-4
                    

        script(src='https://kit.fontawesome.com/2453eb7729.js', crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')

        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js', integrity='sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3', crossorigin='anonymous')

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js', integrity='sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk', crossorigin='anonymous')
        script(src='/js/common.js')
